{{- $pages := where .Site.RegularPages "Draft" "ne" true -}}
[
{{- range $i, $p := $pages -}}
{{- if $i }},{{ end -}}
{
  "title": {{ $p.Title | jsonify }},
  "description": {{ with $p.Params.description }}{{ . | jsonify }}{{ else }}""{{ end }},
  "permalink": {{ $p.Permalink | jsonify }},
  "section": {{ $p.Section | jsonify }},
  "date": {{ $p.Date | time.Format "2006-01-02T15:04:05Z07:00" | jsonify }},
  "content": {{ $p.Plain | jsonify }}
}
{{- end -}}
]
