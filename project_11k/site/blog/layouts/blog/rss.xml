{{- $pages := .Pages -}}
{{- printf `<?xml version="1.0" encoding="utf-8"?>` | safeHTML -}}
<rss version="2.0">
  <channel>
    <title>{{ .Site.Title }} â€” Blog</title>
    <link>{{ .Permalink }}</link>
    <description>{{ with .Site.Params.description }}{{ . }}{{ end }}</description>
    {{ range first 20 ($pages.ByDate.Reverse) }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
      <description>{{ with .Params.description }}{{ . | html }}{{ end }}</description>
      <guid>{{ .Permalink }}</guid>
    </item>
    {{ end }}
  </channel>
</rss>
